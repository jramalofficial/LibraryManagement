@model LibraryManagement.Models.ViewModels.BookListViewModel;

<div class="container mt-4">
    <h1>Available Books</h1>
    @if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

    @if (!Model.Books.Any())
    {
        <p>No books found.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Description</th>
            <th>Available Copies</th> <!-- ✅ Show availability -->
            <th>Action</th> <!-- ✅ New column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Description</td>
                <td>@book.AvailableCopies</td> <!-- Display available count -->
                <td>
                    @if (book.AvailableCopies > 0)
                    {
                        <form asp-action="Borrow" method="post" asp-route-bookId="@book.Id">
                            <button type="submit" class="btn btn-sm btn-success">Borrow</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-danger">Unavailable</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
